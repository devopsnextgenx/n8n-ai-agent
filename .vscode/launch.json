{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/mcp-server"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: MCP Server (Streamable HTTP Dev)",
            "type": "debugpy",
            "request": "launch",
            "module": "src.server",
            "args": [
                "--dev",
                "--mode",
                "streamable-http"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/mcp-server",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/mcp-server"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests",
                "${workspaceFolder}/mcp-server/tests",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/mcp-server"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: FastAPI Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.fastapi_server:create_fastapi_server",
                "--factory",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "3000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/mcp-server",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/mcp-server"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        }
    ]
}